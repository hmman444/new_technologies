{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Outputs */
    "sourceMap": true,
    "declaration": true,

    /* Strict Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Module Interop */
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* Cho ph√©p import file JSON */
    "resolveJsonModule": true,

    /* Skip checking library files */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

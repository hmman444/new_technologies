<body>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (Array.isArray(datalist) && datalist.length > 0) { %>
                <% datalist.forEach(user => { %>
                    <tr>
                        <td><%= user.email %></td>
                        <td><%= user.firstName %></td>
                        <td><%= user.lastName %></td>
                        <td><%= user.address %></td>
                        <td>
                            <a href="/edit-crud?id=<%= user.id %>">Edit</a> ||
                            <a href="/delete-crud?id=<%= user.id %>">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5">No users found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
